@model PF_Pach_OS.Models.Proveedore

@{
    ViewData["Title"] = "Details";
    ViewBag.modal = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Detalles</h1>

<div>
    <h4>Proveedor</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nit)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nit)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NomLocal)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomLocal)
        </dd>
    </dl>
</div>
<div>
    <a href="#" class="btn btn-primary" id="showDetailsModal">Ver Detalles</a> |
    <a asp-action="Index">Back to List</a>
</div>

<!-- Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1" role="dialog" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsModalLabel">Proveedor Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>NIT: <span id="nitValue"></span></p>
                <p>Nombre del Local: <span id="nomLocalValue"></span></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#showDetailsModal').on('click', function () {
                var nit = '@Model.Nit';
                var nomLocal = '@Model.NomLocal';

                $('#nitValue').text(nit);
                $('#nomLocalValue').text(nomLocal);

                $('#detailsModal').modal('show');
            });
        });
    </script>
}
